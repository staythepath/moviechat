<Container version="2">
    <Name>moviechat-bot</Name>
    <Repository>staythepath/moviechat-bot:latest</Repository>
    <Registry>https://hub.docker.com/r/staythepath/moviechat-bot</Registry>
    <Network>bridge</Network>
    <MyIP/>
    <Privileged>false</Privileged>
    <Support>https://github.com/staythepath/moviechat-bot/issues</Support>
    <Overview>MovieChat Bot - A OpenAI based Discord chatbot with radarr integraetion. You can talk to the bot and when it mentions a mvoie you can click the corresponding reaction to add it to radarr. You must setup a discord bot and connect it. </Overview>
    <Category>Media:Tools</Category>
    <WebUI>http://[IP]:[PORT:1138]/</WebUI>
    <TemplateURL>https://github.com/staythepath/moviechat-bot/template.xml</TemplateURL>
    <Icon>https://github.com/staythepath/moviechat/blob/main/icon128.png?raw=true</Icon>
    <ExtraParams/>
    <PostArgs/>
    <CPUset/>
    <DateInstalled>0</DateInstalled>
    <DonateText/>
    <DonateLink/>
    <Description>A Docker container for the MovieChat Bot application.</Description>
    <Networking>
        <Mode>bridge</Mode>
        <Publish>
            <Port>
                <HostPort>1138</HostPort>
                <ContainerPort>1138</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
        </Publish>
    </Networking>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/moviechat-bot/config.yaml</HostDir>
            <ContainerDir>/usr/src/app/config.yaml</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
</Container>
